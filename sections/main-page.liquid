<div class="bg-black-50 px-36 lg:px-72">
  <div class="max-w-[840px] w-full mx-auto py-s12 lg:py-s13">
    <h2 class="text-center text-primary-900 ">
      {%- if page.title != blank -%}
        {{ page.title | escape }}
      {%- endif -%}
    </h2>
    <div class="h-[1px] w-full bg-white mt-s7 lg:mt-s8"></div>
    <div class="mt-s11 lg:mt-s12 rich-text">
      {{ page.content | remove: '<meta charset="utf-8">' }}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.main-page.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}
