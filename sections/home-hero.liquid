<div class="w-full p-s13">
    <h1>{{ section.settings.heading }}</h1>
    <a> {{ section.settings.buttonLabel }}</a>
</div>

{% schema %}
{
    "name":"Hero",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Life Happens Here"
        },
        {
            "type": "text",
            "id": "buttonLabel",
            "label": "Button Label",
            "default": "Shop Best Sellers"
        },
        {
            "type": "url",
            "id": "buttonUrl",
            "label": "Button URL"
        }
    ]
}
{% endschema %}