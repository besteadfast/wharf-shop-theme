        ]
      }, {
        "name": "Feature Column",
        "type": "feature-column",
        "settings": [
          {
            "type": "select",
            "id": "menu",
            "label": "Menu",
            "options": [
              {
                "value": "apparel",
                "label": "Apparel"
              }, {
                "value": "objects",
                "label": "Objects"
              }, {
                "value": "featured",
                "label": "Featured"
              }
            ]
